<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment" >
     <name>VERITRANS PAYMENT</name>
    <creationDate>October 2013</creationDate>
    <author>Veritrans - Developer</author>
    <authorUrl>http://www.veritrans.co.id</authorUrl>
    <copyright></copyright>
    <license></license>
    <version>beta</version>
    <description>
    </description>
    <languages>
		<language tag="en-GB">en-GB.plg_vmpayment_veritrans.ini</language>
		<language tag="da-DK">da-DK.plg_vmpayment_veritrans.ini</language>
    </languages>
    <files>
	<filename plugin="veritranspay">veritranspay.php</filename>
	<folder>veritranspay</folder>
    </files>
    <params addpath="/plugins/vmpayment/veritranspay/elements"/>
    <params addpath="/plugins/vmpayment/veritranspay/veritranspay/elements"/>
    <params addpath="/administrator/components/com_virtuemart/elements">
		<param type="vmjpluginwarning" />
		<param type="spacer" default="VERITRANS_PARAMS" level="level1" />
		<param type="text" name="epay_merchant"  size="50" label="VMPAYMENT_VERITRANS_MERCHANT" description="VMPAYMENT_VERITRANS_MERCHANT_DESC" />
		<param type="text" name="epay_hash"  size="50" label="VMPAYMENT_VERITRANS_HASH" description="VMPAYMENT_VERITRANS_HASH_DESC" />
		<param name="status_pending" type="vmorderstate" scope="com_virtuemart" default="P" label="VMPAYMENT_VERITRANS_STATUS_PENDING" description="VMPAYMENT_VERITRANS_STATUS_PENDING_EXPLAIN" />
		<param name="status_success" type="vmorderstate" scope="com_virtuemart" default="C" label="VMPAYMENT_VERITRANS_STATUS_SUCCESS" description="VMPAYMENT_VERITRANS_STATUS_SUCCESS_EXPLAIN" />
		<param name="status_canceled" type="vmorderstate" scope="com_virtuemart" default="X" label="VMPAYMENT_VERITRANS_STATUS_FAILED" description="VMPAYMENT_VERITRANS_STATUS_FAILED_EXPLAIN" />
 	</params>


</install>
